.yincang .ool a { margin-left: 0.2rem; }

.iconfont { font-family: "iconfont" !important; font-size: 1.28rem; font-style: normal; -webkit-font-smoothing: antialiased; -webkit-text-stroke-width: 0.2px; -moz-osx-font-smoothing: grayscale; }

