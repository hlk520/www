.sou { width: 100%; height: 100%; background: white; display: none; position: absolute; top: 0; left: 0; z-index: 2; }

.sou > p { width: 100%; height: 1.76rem; background: cornsilk; display: flex; justify-content: space-around; align-items: center; }

.sou > p > input { width: 50%; height: 70%; display: flex; border-radius: 5px; padding-left: 5px; }

.yincang .ool { width: 60%; height: 100%; background: white; display: flex; flex-direction: column; align-items: center; }

.yc { width: 40%; height: 100%; background: #ccc; opacity: 0.3; }

